<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">

    <ImageButton
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/iv_logo2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200dp"

        android:scaleType="fitXY"
        android:background="@drawable/bg_image"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/login_activity_login_logo"
        android:layout_width="128dp"
        android:visibility="gone"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"/>

    <TextView
        android:id="@+id/tv_main_header"
        android:layout_width="match_parent"
        android:background="@color/main_color_blue"
        android:text="Hrvatska gorska služba spašavanja"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@+id/iv_logo2"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_user_hgss"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_50dp"
        android:text="Login službenika HGSS-a"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_height="@dimen/_40dp"
        android:layout_below="@+id/tv_main_header"
        android:layout_toEndOf="@+id/login_activity_login_logo"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_below="@+id/tv_user_hgss"
        android:text="HGSS Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:textColor="@color/white"
        android:background="@color/main_color_blue"/>


    <TextView
        android:id="@+id/tv_user"
        android:layout_below="@id/login_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20dp"
        android:text="Login korisnika"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_height="@dimen/_40dp"/>

    <Button
        android:id="@+id/google_button"
        android:layout_below="@+id/tv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:background="@drawable/button"/>



