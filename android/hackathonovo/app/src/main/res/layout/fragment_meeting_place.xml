<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fancy="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="eu.hackathonovo.ui.home_leader.MeetingPlaceFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@drawable/action_bg"/>

    <LinearLayout
        android:id="@+id/ll_meet_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meeting_place_btn"
        android:layout_marginLeft="@dimen/_30dp"
        android:layout_marginRight="@dimen/_30dp"
        android:background="@drawable/border_for_layouts"

        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/ivPassword"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/ic_location_on_black_24dp"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/tv_meeting_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_weight="0.2"

            android:background="@android:color/transparent"
            android:contentDescription="Å ifra"
            android:hint="Unesite mjesto sastanka timova"

            android:inputType="text"
            android:textColor="@color/main_color_black"

            android:textSize="@dimen/_12sp"/>

    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/meeting_place_btn"
        android:layout_width="@dimen/_100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="Unesi"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/main_color_blue"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="Unesi"
        fancy:fb_textColor="#FFFFFF"
        />

</RelativeLayout>
