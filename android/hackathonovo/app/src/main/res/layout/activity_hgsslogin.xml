<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_login"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".ui.login.HGSSLoginActivity">

    <include
        android:id="@+id/tv_header"
        layout="@layout/shadow_layout">
    </include>

    <LinearLayout
        android:id="@+id/llFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header"
        android:layout_marginLeft="@dimen/_30dp"
        android:layout_marginRight="@dimen/_30dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/iv_mail"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/ic_email_black_24dp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/login_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_weight="0.2"
            android:background="@android:color/transparent"
            android:contentDescription="e-mail"
            android:hint="e-mail"
            android:textColor="@color/main_color_black"
            android:text="voditelj"
            android:textSize="@dimen/_20sp"/>

    </LinearLayout>

    <View
        android:id="@+id/viewFirst"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llFirst"
        android:layout_marginLeft="@dimen/_25dp"

        android:layout_marginRight="@dimen/_25dp"
        android:background="@color/main_color_black"/>

    <LinearLayout
        android:id="@+id/llSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewFirst"
        android:layout_marginLeft="@dimen/_30dp"
        android:layout_marginRight="@dimen/_30dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/ivPassword"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/ic_group_add_black_24dp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/login_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_weight="0.2"
            android:contentDescription="Šifra"
            android:background="@android:color/transparent"
            android:inputType="textPassword"

            android:text="1234"

            android:hint="šifra"
            android:textColor="@color/main_color_black"

            android:textSize="@dimen/_20sp"/>

    </LinearLayout>

    <!-- <EditText
        android:id="@+id/login_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewFirst"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_25dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"

        android:textCursorDrawable="@drawable/edittext_style_cursor"

        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/main_color_black"
        android:textSize="@dimen/_20sp" /> -->

    <View
        android:id="@+id/viewSecond"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llSecond"
        android:layout_marginLeft="@dimen/_25dp"

        android:layout_marginRight="@dimen/_25dp"
        android:background="@color/main_color_black"/>




    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_below="@+id/viewSecond"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_25dp"
        android:layout_marginTop="@dimen/_30dp"
        android:background="@color/main_color_blue"
        android:text="Prijavi se"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sp"/>

</RelativeLayout>
