{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "version": "0.0.1",
    "name": "angular-app"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": ["assets"],
      "index": "index.html",
      "main": "app/main.ts",
      "tsconfig": "tsconfig.json",
      "polyfills": "polyfills.ts",
      "styles": [
        "assets/css/materialize.min.css",
        "assets/css/main.css",
        "styles.css"
      ],
      "scripts": [
        "assets/js/jquery-2.1.1.min.js",
        "assets/js/materialize.min.js",
        "assets/js/main.js"
      ]
    }
  ],
  "defaults": {
    "styleExt": "css",
    "prefixInterfaces": false,
    "inline": {
      "style": false,
      "template": false
    },
    "spec": {
      "class": false,
      "component": true,
      "directive": true,
      "module": false,
      "pipe": true,
      "service": true
    }
  }
}
